# Database
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bustracker

# Redis
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# API
PORT=3000
WS_PORT=3001
NODE_ENV=development

# CORS (frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Rate Limiting
RATE_LIMIT_TELEMETRY=10  # req/min per device
RATE_LIMIT_API=100       # req/min per user

# Maps (opzionale, usa OpenStreetMap di default)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring (opzionale)
# SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug

# Email (opzionale)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@bustracker.com
# SMTP_PASSWORD=your-smtp-password
